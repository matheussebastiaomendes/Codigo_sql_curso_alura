-- CURSO SQL ALURA

-- Verificando todas colunas da tabela itens dos produtos

SELECT * FROM ITENSDOSPEDIDOS;

-- Verificando colunas ORDER_ID, PRICE, FREIGHT_VALUE da tabela itens dos produtos e ordenando de forma decrescente
-- de acordo com o preco

SELECT ORDER_ID, PRICE, FREIGHT_VALUE 
FROM ITENSDOSPEDIDOS 
ORDER BY PRICE DESC;

-- LIMITANDO CONSULTA A 5 REGISTROS

SELECT ORDER_ID, PRICE, FREIGHT_VALUE 
FROM ITENSDOSPEDIDOS LIMIT = 5;

-- UNINDO TABELAS E SELECIONANDO CATEGORIA 'casa_conforto' COM PRECO MAIOR QUE 100 E ORGANIZANDO RESULTADOS

SELECT * 
FROM ITENSDOSPEDIDOS
LEFT JOIN INFORMACOESPRODUTOS ON ITENSDOSPEDIDOS.PRODUCT_ID = 
INFORMACOESPRODUTOS.PRODUCT_ID
WHERE PRODUCT_CATEGORY_NAME = 'casa_conforto' and PRICE > 100 ORDER BY PRICE DESC ;

-- SELECIONANDO LINHAS DIFERENTES DA TABELA ITENS PEDIDOS

SELECT DISTINCT * FROM ITENSDOSPEDIDOS;

-- INSERINDO VALORES NA TABELE ITENS PEDIDOS

INSERT INTO ITENSDOSPEDIDOS (ORDER_ID, ORDER_ITEM_ID, PRODUCT_ID, SELLER_ID, SHIPPING_LIMIT_DATE, PRICE, FREIGHT_VALUE)
VALUES('01787af385123b93ba50c5f05530ee23',1,'e988092a8afe5d9393a5c3a7ca17691c','da7039f29f90ce5b4846ffc0fcc93beb'
,'(null)',50,20);

-- CONSULTANDO SE LINHA FOI INSERIDA

select * from itensdospedidos where order_id = '01787af385123b93ba50c5f05530ee23';

-- REALIZANDO UM UPDATE NA LINHA

UPDATE ITENSDOSPEDIDOS SET PRICE = 1000 WHERE ORDER_ID = '01787af385123b93ba50c5f05530ee23';

-- CONSULTANDO SE LINHA FOI ALTERADA

select * from itensdospedidos where order_id = '01787af385123b93ba50c5f05530ee23';

-- DELETANDO LINHAS

delete from itensdospedidos where order_id = '01787af385123b93ba50c5f05530ee23';
